{
  "name": "ready-set-render",
  "version": "0.1.0",
  "description": "A modular, extensible WebGL2-based 3D editor for learning real-time and ray-tracing rendering",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "dev:remote": "vite --host && echo 'Access via: https://<your-server>:8080/proxy/3000/'",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run test -- --run"
  },
  "keywords": [
    "webgl",
    "webgl2",
    "3d",
    "editor",
    "rendering",
    "raytracing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/webgl2": "^0.0.11",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-plugin-glsl": "^1.5.5",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2"
  }
}
