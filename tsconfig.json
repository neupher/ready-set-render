{
  "compilerOptions": {
    "target": "es6",                      // Modern JavaScript version
    "module": "esnext",                      // Use ES6 module system
    "outDir": "./dist",                   // Output directory for compiled files
    "rootDir": "./source",                // Source directory
    "strict": true,                       // Enable strict type checking
    "moduleResolution": "node",           // Resolve modules in Node.js style
    "esModuleInterop": true,              // Allow compatibility with CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["source/**/*"],             // Include all .ts files in source/
  "exclude": ["node_modules"]             // Exclude node_modules
}